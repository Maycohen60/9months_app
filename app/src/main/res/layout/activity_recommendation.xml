<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/turkiz"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/Image_Logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/mini_logo" />

    <EditText
        android:id="@+id/title_recommendation"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginHorizontal="100px"
        android:background="#D2F8EF "
        android:drawableStart="@drawable/recommm"
        android:hint="Recommendation"
        android:inputType="text"
        android:shadowColor="#D2F8EF"
        android:textColorHighlight="#FFEBCD"
        android:textColorHint="#202020"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp">
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nutrition"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:textColorHint="#FFFFFF"
            android:background="#6AE6BD"
            android:drawableStart="@drawable/food"
            android:hint="Nutrition"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/sport"
            android:layout_width="300dp"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:background="#FAD59E"
            android:drawableStart="@drawable/sport"
            android:hint="Sport"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/tests"
            android:layout_width="300dp"
            android:layout_marginTop="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#FFFFFF"
            android:layout_marginHorizontal="100px"
            android:background="#E6BFFF"
            android:drawableStart="@drawable/test"
            android:hint="Tests"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/medicines"
            android:layout_width="300dp"
            android:layout_marginTop="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#FFFFFF"
            android:layout_marginHorizontal="100px"
            android:background="#FFC7DE"
            android:drawableStart="@drawable/medican"
            android:hint="Medicines"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/hospitals"
            android:layout_width="300dp"
            android:layout_marginTop="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#FFFFFF"
            android:layout_marginHorizontal="100px"
            android:background="#7BD3FF"
            android:drawableStart="@drawable/doctor"
            android:hint="Hospitals"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:paddingLeft="30dp"
            android:background="#D2F8EF"
            ads:srcCompat="@drawable/goback" />





    </FrameLayout>













</LinearLayout>
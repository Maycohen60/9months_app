<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/turkiz"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/Image_Logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="right|top"
        android:background="#D2F8EF "
        android:shadowColor="#D2F8EF"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/mini_logo" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/title_reg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:layout_gravity="left"
            android:layout_marginHorizontal="100px"
            android:layout_marginTop="2dp"
            android:background="#D2F8EF "
            android:drawableStart="@drawable/bulid"
            android:hint=" Registration"
            android:inputType="text"
            android:shadowColor="#D2F8EF"
            android:textColorHighlight="#673AB7"
            android:textColorHint="#202020"
            android:textSize="20dp"
            android:textStyle="bold" />



    <EditText
        android:id="@+id/enterName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="100px"
        android:hint="enter your name"
        android:inputType="text"
        android:textColorHint="#202020"
        android:textColorHighlight="#673AB7" />

        <EditText
            android:id="@+id/enterPhone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:hint="enter phone number"
            android:inputType="phone"
            android:textColorHint="#202020"
            android:textColorHighlight="#673AB7" />

        <EditText
            android:id="@+id/enterID"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:hint="choose ID"
            android:inputType="number"
            android:textColorHint="#202020"
            android:textColorHighlight="#673AB7" />

        <EditText
            android:id="@+id/enterPass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:hint="enter password (numerical)"
            android:inputType="numberPassword"
            android:textColorHint="#202020"
            android:textColorHighlight="#673AB7" />

        <EditText
            android:id="@+id/secPass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:hint="enter your password again"
            android:inputType="numberPassword"
            android:textColorHint="#202020"
            android:textColorHighlight="#673AB7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="450dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:background="#D2F8EF"
                ads:srcCompat="@drawable/goback" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <ImageButton
                android:id="@+id/continueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:background="#D2F8EF"
                ads:srcCompat="@drawable/forword" />


        </LinearLayout>


    </FrameLayout>


</LinearLayout>
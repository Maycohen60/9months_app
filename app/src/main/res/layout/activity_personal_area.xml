<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/Image_Logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="10dp"
        android:background="#FEFED4 "
        android:shadowColor="#D2F8EF"
        app:srcCompat="@drawable/mini_logo" />

    <EditText
        android:id="@+id/title_PersonalArea"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginHorizontal="100px"
        android:background="#FEFED4 "
        android:drawableStart="@drawable/person"
        android:hint=" Personal area"
        android:inputType="text"
        android:shadowColor="#D2F8EF"
        android:textColorHighlight="#FFEBCD"
        android:textColorHint="#202020"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <Button
            android:id="@+id/WatchPersonalInfo"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:textColorHint="#FFFFFF"
            android:background="#E6BFFF"
            android:drawableStart="@drawable/personalfile2"
            android:hint="Watch my personal info"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/Watchrecommendation"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:background="#FFC7DE"
            android:drawableStart="@drawable/recommm"
            android:textColorHint="#FFFFFF"
            android:hint="Watch my recommendation"
            android:layout_marginTop="130dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Changepassword"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100px"
            android:background="#6AE6BD"
            android:drawableStart="@drawable/password2"
            android:textColorHint="#FFFFFF"
            android:hint="Change password"
            android:layout_marginTop="260dp"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:paddingLeft="30dp"
            android:background="#FEFED4"
            ads:srcCompat="@drawable/goback" />


    </FrameLayout>
</LinearLayout>
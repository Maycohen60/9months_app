<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <ImageView
            android:id="@+id/Image_Logo"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="10dp"
            android:background="#FFEBCD "
            android:shadowColor="#D2F8EF"
            app:srcCompat="@drawable/mini_logo" />

        <EditText
            android:id="@+id/title_Personalnfo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="100px"
            android:background="#FFEBCD "
            android:drawableStart="@drawable/bulid"
            android:hint=" Personal Information"
            android:inputType="text"
            android:shadowColor="#D2F8EF"
            android:textColorHighlight="#FFEBCD"
            android:textColorHint="#202020"
            android:textSize="20dp"
            android:textStyle="bold" />





        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/enterWeight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="100px"
                    android:hint="enter phone weight"
                    android:inputType="number"
                    android:textColorHighlight="#673AB7"
                    android:textColorHint="#202020" />

                <EditText
                    android:id="@+id/enterAge"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="100px"
                    android:hint="enter your age"
                    android:inputType="number"
                    android:textColorHighlight="#673AB7"
                    android:textColorHint="#202020" />

                <EditText
                    android:id="@+id/enterHight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="100px"
                    android:hint="enter phone hight"
                    android:inputType="number"
                    android:textColorHighlight="#673AB7"
                    android:textColorHint="#202020" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/smokning"
                        android:layout_width="4dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:text="Smoking ?     "
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/yes"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#FFFFFF"
                        android:layout_weight="1"
                        android:background="#5DE380"
                        android:hint="Personal area"
                        android:text="Yes" />

                    <Button
                        android:id="@+id/No"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#FFFFFF"
                        android:layout_marginRight="60dp"
                        android:layout_weight="1"
                        android:background="#F62727"
                        android:text="No" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Alcohol_use"
                        android:layout_width="4dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:text="Alcohol use ?"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/yes2"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#FFFFFF"
                        android:layout_weight="1"
                        android:background="#5DE380"
                        android:hint="Personal area"
                        android:text="Yes" />

                    <Button
                        android:id="@+id/No2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#FFFFFF"
                        android:layout_marginRight="45dp"
                        android:layout_weight="1"
                        android:background="#F62727"
                        android:text="No" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Exercise"
                        android:layout_width="4dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:text="Exercise ?"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/yes3"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#FFFFFF"
                        android:layout_weight="1"
                        android:background="#5DE380"
                        android:hint="Personal area"
                        android:text="Yes" />

                    <Button
                        android:id="@+id/No3"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#FFFFFF"
                        android:layout_marginRight="45dp"
                        android:layout_weight="1"
                        android:background="#F62727"
                        android:text="No" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/registration2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="#F5B5C3"
                        android:gravity="center"
                        android:text="Register"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/go_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:background="#FFEBCD"
                        ads:srcCompat="@drawable/goback" />

                </LinearLayout>


            </LinearLayout>

        </FrameLayout>


</LinearLayout>

